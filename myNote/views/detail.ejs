<%- include header %>
<div class="container">
	<div calss="row">
		<div class="col-x8-4 col-x8-offset-4">
			<div class="article-box">
				<h1 class="text-left"><%= art.title %></h1>
				
				      <span class="text-bold" color=#666666>#<%= art.tag %>#   </span>
				      

				<span class="create-time" align="right">
                       <span class="text-bold" align="right">  </span>
                       <%=moment(art.createTime).locale('zh-cn').format('LL HH:mm:ss')%>
					</span>
					<p></p>
				
				<div align="center">
				<form action="/edit" method="post">
				<textarea class="text"  name="id"  style="display:none;"><%= art.id %></textarea>
			      <textarea name="content"  class="text"><%= art.content %></textarea>
			      <p></p>
			      <button type="submit" class="btn btn-default" >确认修改</button>
			    </form>
	        </div>

			</div>
		</div>
	</div>
</div>

<%- include footer %>